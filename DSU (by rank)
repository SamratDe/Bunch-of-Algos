int par[100005],rnk[100005];

void intialize(int n)
{	rep(i,0,n)
	{	par[i]=i;
		sz[i]=1;
	}
}

int find(int x)
{	if(par[x]!=x)
		par[x]=find(par[x]);
	return par[x];
}

void merge(int x,int y)
{	int xr=find(x),yr=find(y);
	if(xr==yr)
		return;
	if(rnk[xr]>rnk[yr])
		par[yr]=xr;
	else if(rnk[yr]>rnk[xr])
		par[xr]=yr;
	else{
		par[yr]=xr;
		rnk[xr]+=1;
	}
}
